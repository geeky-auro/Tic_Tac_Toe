<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".TictacsplashActivity"
    android:background="#aee1fc">


    <TextView
        android:id="@+id/legacytitle"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/ballon"
        android:text="Noughts and Crosses"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="39dp"
        ></TextView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:lottie_fileName="tactoe.json"
        app:lottie_loop="false"
        app:lottie_autoPlay="true" />

    <TextView
        android:id="@+id/quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Creative-Innovative-Visionary"
        android:textAlignment="center"
        android:textSize="20.5dp"
        android:fontFamily="@font/coiny"
        android:textColor="#000"
        android:textStyle="normal"></TextView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:backgroundTint="#2978b5"
            android:text="Skip"
            android:textSize="22dp"
            android:textStyle="bold"
            app:cornerRadius="10dp"></com.google.android.material.button.MaterialButton>
    </FrameLayout>

</LinearLayout>