<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#52057b"
    tools:context=".tictacoptions">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="?android:attr/selectableItemBackground"
            android:shadowColor="#000"
            android:shadowDx="-4"
            android:shadowDy="-4"
            android:shadowRadius="1"
            android:onClick="goback"
            ></ImageButton>

        <ImageButton
            android:id="@+id/playtacshare"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/customusersetting1"
            android:background="?android:attr/selectableItemBackground"
            android:shadowColor="#000"
            android:shadowDx="-4"
            android:shadowDy="-4"
            android:shadowRadius="1"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:padding="4.5dp"
            ></ImageButton>

    </FrameLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="200dp"
        app:cardElevation="50dp"
        android:layout_marginTop="15dp"
        android:background="#892cdc"
        android:layout_gravity="center"
        app:cardCornerRadius="15dp">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/humanvshuman"
            android:background="#892cdc"
            android:scaleType="centerCrop"
            android:onClick="h2h"
            android:padding="2sp"
            ></ImageButton>

    </androidx.cardview.widget.CardView>




    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick Your App Mode"
        android:textAlignment="center"
        android:textSize="46dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:shadowColor="#000"
        android:fontFamily="@font/waltograph42"
        ></TextView>


    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="200dp"
        app:cardElevation="50dp"
        android:layout_marginTop="15dp"
        android:background="#892cdc"
        android:layout_gravity="center"
        app:cardCornerRadius="15dp">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2sp"
            android:src="@drawable/computervshuman"
            android:background="#892cdc"
            android:onClick="c2h"
            ></ImageButton>

    </androidx.cardview.widget.CardView>









</LinearLayout>